{
  "name": "get-folder",
  "private": false,
  "version": "0.1.0-alpha.1",
  "description": "Folder retrieval tool.",
  "main": "./dist/index.js",
  "common": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package": "./package.json"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "set NODE_ENV=production&&rollup -c",
    "toPublish": "npm publish --registry=https://registry.npmjs.org --access=public",
    "release": "pnpm run build && pnpm run toPublish"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/jl15988/get-folder"
  },
  "keywords": [
    "get-folder",
    "folder",
    "folder-size",
    "get-folder-size"
  ],
  "author": "jl15988",
  "license": "MIT",
  "dependencies": {
    "bignumber.js": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18"
  }
}
