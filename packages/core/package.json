{
  "name": "brisk-folder-size",
  "private": false,
  "version": "0.1.0-alpha.1",
  "description": "A Vite plugin for automatically compressing specified directories into zip archives after build.",
  "main": "./dist/index.js",
  "common": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package": "./package.json"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "set NODE_ENV=production&&rollup -c",
    "toPublish": "npm publish --registry=https://registry.npmjs.org --access=public",
    "release": "pnpm run build && pnpm run toPublish"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/jl15988/brisk-folder-size"
  },
  "keywords": [
  ],
  "author": "jl15988",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "vite": "^5.0.0",
    "@types/node": "^22.15.18"
  }
}
